* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

* a {
  text-decoration: none;
}

html {
  background: linear-gradient(to right, #0062e6, #33aeff);
}

html,
body {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: #2f2f2f;
}

body {
  display: grid;
  height: 100vh;
  grid-template-rows: auto 1fr auto;
}

header {
  background: #528fdf;
  padding: 2rem;
  height: 10vh;
}

main {
  background: #324e74;
}

footer {
  background: wheat;
  padding: 2rem;
  text-align: center;
}

